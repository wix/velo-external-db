{
  "name": "@wix-velo/velo-external-db-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/velo-external-db-core/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/velo-external-db-core",
        "main": "libs/velo-external-db-core/src/index.ts",
        "tsConfig": "libs/velo-external-db-core/tsconfig.lib.json",
        "assets": [
          "libs/velo-external-db-core/*.md",
          "libs/velo-external-db-core/src/assets/**/*",
          "libs/velo-external-db-core/src/views/**/*",
          "libs/velo-external-db-core/src/*.json"
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "publish": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs @wix-velo/velo-external-db-core {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "publishCi": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publishCi.mjs @wix-velo/velo-external-db-core"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/velo-external-db-core/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/libs/velo-external-db-core"
      ],
      "options": {
        "jestConfig": "libs/velo-external-db-core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
